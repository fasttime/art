{
  "name": "art-js",
  "version": "1.0.1",
  "description": "A really small DOM manipulation library",
  "keywords": [
    "art",
    "browser",
    "dom",
    "library"
  ],
  "homepage": "https://github.com/fasttime/art",
  "bugs": "https://github.com/fasttime/art/issues",
  "license": "ISC",
  "author": "Francesco Trotta <ft@fasttime.org> (https://github.com/fasttime)",
  "files": [
    "*.d.ts",
    "dist",
    "doc",
    "templates",
    "!.*"
  ],
  "main": "make-art.js",
  "types": "make-art.d.ts",
  "bin": {
    "make-art": "make-art.js"
  },
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasttime/art.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "test": "mocha --check-leaks test/**/*.spec.js"
  },
  "dependencies": {
    "@types/node": ">=12",
    "handlebars": ">=4.1"
  },
  "devDependencies": {
    "@fasttime/gulp-lint": "latest",
    "expectations": "latest",
    "gulp": "latest",
    "gulp-typedoc": "latest",
    "jsdom": "latest",
    "mocha": "3",
    "mocha-bar": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "typedoc": "latest",
    "typedoc-plugin-markdown": "latest"
  },
  "engines": {
    "node": ">=12"
  }
}
